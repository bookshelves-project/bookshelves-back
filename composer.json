{
    "name": "bookshelves/back",
    "type": "project",
    "description": "Back of Bookshelves application.",
    "license": "BSD 2-Clause",
    "version": "1.0.0",
    "homepage": "https://gitlab.com/ewilan-riviere/bookshelves-back",
    "authors": [
        {
            "name": "ewilan-riviere",
            "email": "ewilan.riviere@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Mopi",
            "email": "mopi@gdotslashplay.it",
            "role": "Tester, ideas"
        }
    ],
    "keywords": [
        "api",
        "epubs",
        "books",
        "ebooks"
    ],
    "repositories": [
        {
            "type": "git",
            "url": "https://gitlab.com/ewilan-riviere/bookshelves-back"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "artesaos/seotools": "^0.20.1",
        "blade-ui-kit/blade-icons": "^1.1",
        "blade-ui-kit/blade-ui-kit": "^0.2.0",
        "fideloper/proxy": "^4.4",
        "fluentdom/fluentdom": "^8.0",
        "friendsofphp/php-cs-fixer": "^3.1",
        "fruitcake/laravel-cors": "^2.0",
        "guzzlehttp/guzzle": "^7.0.1",
        "http-interop/http-factory-guzzle": "^1.2",
        "inertiajs/inertia-laravel": "^0.4.3",
        "itsgoingd/clockwork": "^5.0",
        "jenssegers/agent": "^2.6",
        "laravel/fortify": "^1.7",
        "laravel/framework": "^8.12",
        "laravel/jetstream": "^2.3",
        "laravel/sanctum": "^2.6",
        "laravel/scout": "^9.2",
        "laravel/telescope": "^4.4",
        "laravel/tinker": "^2.5",
        "league/commonmark": "^2.0.2",
        "league/html-to-markdown": "^5.0",
        "meilisearch/meilisearch-php": "^0.19.0",
        "oscarotero/inline-svg": "^2.0",
        "spatie/array-to-xml": "^3.0",
        "spatie/image": "^1.10",
        "spatie/laravel-enum": "^2.4",
        "spatie/laravel-image-optimizer": "^1.6",
        "spatie/laravel-medialibrary": "^9.0.0",
        "spatie/laravel-query-builder": "^3.6",
        "spatie/laravel-route-attributes": "^1.4",
        "spatie/laravel-tags": "^4.0",
        "tightenco/ziggy": "^1.0"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.9",
        "brianium/paratest": "^6.2",
        "facade/ignition": "^2.5",
        "fakerphp/faker": "^1.13",
        "fruitcake/laravel-telescope-toolbar": "1.3.x-dev",
        "knuckleswtf/scribe": "^3.9.1",
        "laravel/breeze": "^1.1",
        "laravel/sail": "^0.0.5",
        "mockery/mockery": "^1.4.2",
        "nunomaduro/collision": "^5.0",
        "nunomaduro/larastan": "^0.7.0",
        "pestphp/pest": "^1.20",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpunit/phpunit": "^9.3.3",
        "spatie/phpunit-watcher": "^1.23"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/telescope"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "helper": [
            "php artisan ide-helper:generate",
            "php artisan ide-helper:models --nowrite",
            "php artisan ide-helper:eloquent",
            "vendor/bin/php-cs-fixer fix",
            "php vendor/bin/phpstan analyse"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "format": [
            "php-cs-fixer fix --ansi"
        ],
        "analyse": [
            "phpstan analyse --ansi"
        ],
        "larastan": [
            "php artisan larastan"
        ],
        "test": [
            "@php artisan test --coverage --min=70"
        ],
        "test:watch": [
            "Composer\\Config::disableProcessTimeout",
            "phpunit-watcher watch"
        ]
    }
}
